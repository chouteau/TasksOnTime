<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <Version>1.0.4.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Ariane5.Azure" Version="5.2.18" />
    <PackageReference Include="TasksOnTimeCore" Version="0.2.17.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DistributedTasksOnTime.Shared\DistributedTasksOnTime.Shared.csproj">
      <CopyLocal>True</CopyLocal>
    </ProjectReference>
  </ItemGroup>

	<ItemGroup>
		<Content Include="$(OutputPath)\DistributedTasksOnTime.Shared.dll">
			<BuildAction>Embedded Resource</BuildAction>
			<CopyToOutputDirectory>true</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>lib\net6.0</PackagePath>
		</Content>
	</ItemGroup>

</Project>
